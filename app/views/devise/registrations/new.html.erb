<center>
  <h2>Sign uppppp</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="large-2"><%= f.label :username %>
    <%= f.text_field :username, :autofocus => true %></div>

    <div class="large-3"><%= f.label :email %>
    <%= f.email_field :email %></div>

    <div class="large-3"><%= f.label :password %>
    <%= f.password_field :password %></div>

    <div class="large-3"><%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %></div>

    <div class="large-2 panel clearfix"><%= f.submit "Sign up", :class => "button middle" %></div>

  <% end %>

  <%= render "devise/shared/links" %>
</center>
