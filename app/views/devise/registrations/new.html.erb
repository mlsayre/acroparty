<h2 class="acrofont centerall">Sign up for AcroParty</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <div class="centerall">
    <%= devise_error_messages! %>
  </div>
    <div class="small-2 centerall"><%= f.label :username %>
    <%= f.text_field :username, :autofocus => true %></div>

    <div class="small-3 centerall"><%= f.label :email %>
    <%= f.email_field :email %></div>

    <% if f.object.password_required? %>
      <div class="small-3 centerall"><%= f.label :password %>
      <%= f.password_field :password %></div>

      <div class="small-3 centerall"><%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %></div>
    <% end %>

  <div class="centerall">
    (Your email address and all other information will never be shared with anyone.)
  </div>
  <div class="large-2 centerall" style="margin-top:12px"><%= f.submit "Sign up", :class => "button middle" %></div>
<% end %>
<div class="centerall">
  <%= render "devise/shared/links" %>
</div>

