  setTimeout(votingRound, 400);
  vtimer();
  setTimeout(r1res, <%= @r1votetime %>*1000);
}

function r1res() {
  slideRoundText();
  $("#votediv").dialog('close');
  $("#votediv").hide();
  $("#timertext").hide();
  $("#answertextfield").val("");
  $("#resultsdiv").load("/room/familyroom #resultsdiv", ".");
