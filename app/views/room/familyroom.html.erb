
<div class=" small-4 small-centered chattable" id="chatbox">
  <ul id="chat">
    <%= render @messages %>
  </ul>
</div>
<%= subscribe_to "/messages/new" %>
<%= form_for Message.new, remote: true do |f| %>
  <%= f.text_field :content %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.submit "Send" %>
<% end %>
